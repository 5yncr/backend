#!/usr/bin/env python
import argparse

from syncr_backend.init import drop_init


def main() -> None:
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "directory",
        type=str,
        help="Directory to create a drop from",
    )
    args = parser.parse_args()

    drop_init.initialize_drop(args.directory)


if __name__ == '__main__':
    main()
